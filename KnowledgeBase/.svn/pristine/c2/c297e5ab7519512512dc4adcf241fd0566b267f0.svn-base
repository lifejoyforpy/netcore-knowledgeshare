            el: '#article',
            data: {
                dataresult: {
                    Title: "知识分享",
                    Author: 'ABC',
                    CreatetTime: '2018-06-07',
                    Catagory: 'MES',
                    Views: 0,
                    Likes: 0,
                    Content: '',
                    Tag: ''

                },
                Tags: ['分享', 'MES']
            },
            methods: {
                init: function () {

                    @*API.POST(
                        '/KonwledgeBackend/BackendManage/GetKnowledgeShareDetail',
                        { Id: '@Id' }
                    ).then(data => {
                        if (data.status == '0') {
                            vm.$data.dataresult = data.data;
