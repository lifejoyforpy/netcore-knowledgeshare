@{
    ViewData["Title"] = "Detail";
    var Id = ViewData["Id"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <link href="~/lib/summernote/summernote.css" rel="stylesheet" />
    <style>

        .post-title {
            text-align: center;
            font-size: 24px;
        }

        .post-meta {
            text-align: center;
        }

        .post-body {
            padding: 0;
        }

        .site-box {
            padding-bottom: 20px;
            background: #fff;
            margin-bottom: 10px;
            border-radius: 3px;
            box-shadow: 0 1px 3px rgba(0,0,0,.1);
        }
    </style>

}

<div class="container-fluid" style="background:#f4f4f4  ">
    <article id="article" class="col-md-9  site-box">
        <h1 class="post-title">{{dataresult.title}}</h1>
        <div class="post-meta">
            <span class="post-time">
                <i class="demo-icon icon-calendar"></i>
                {{ dateformate(dataresult.createTime)}}
            </span>
            <span class="post-category">
                <i class="demo-icon icon-folder-open "></i>
                {{dataresult.category}}
            </span>
            <span class="post-comments-count">
                <i class="fa fa-comments-o"></i>
                {{dataresult.views}}
            </span>
            <span class="post-comments-count">
                <i class="fa fa-thumbs-up"></i>
                {{dataresult.likes}}
            </span>
        </div>
        <div id="content" class="post-body"   v-html="dataresult.content">
        </div>
        <div class=" post-tags">
            <a href=""  v-for="item in Tags">
                <i class="icon-tags">
                </i>
                {{item}}
            </a>
        </div>
        <div>
        </div>
        @*<button id="edit" class="btn btn-primary" v-on:click="edit" type="button">Edit 1</button>
        <button id="save" class="btn btn-primary" v-on:click="save" type="button">Save 2</button>

        <div class="click2edit">click2edit</div>
        <div id="summernote"></div>*@
    </article>
    <div class="col-md-3">
        <div class="col-md-11 sidebar" style="background:#fff ; margin-left:10px ">
            <div class="side-nav">
                <span class="current">文章目录</span>
            </div>
        </div>
    </div>
</div>
@section Scripts{
